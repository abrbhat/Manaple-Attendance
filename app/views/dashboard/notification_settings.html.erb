<h2>Notifications Settings</h2>
<div class = "form-container left-side">
<%= form_tag({controller:"dashboard",action:"notification_settings_update"}, method: "post", class:"form-horizontal") do %> 
	<div class="form-group">
	    <label for="notification-email" class="form-label col-sm-5">Email</label>
	    <div class="col-sm-7">
	    	<input type="email" class="form-element" id="notification-email" placeholder="Enter email" value="<%= @email %>" name="notification_email">
		</div>  
	</div>
	<div class="form-group">
	    <label for="notification-mobile" class="form-label col-sm-5">Mobile Phone</label>
	    <div class="col-sm-7">
	    	<input type="text" class="form-element" id="notification-mobile" placeholder="Enter Mobile Phone Number" value="<%= @mobile %>" name="notification_mobile">
	    </div>
	</div>		
	<%= submit_tag "Save", :class => "form-submit-button col-sm-offset-6 col-sm-2" %>
	<%= submit_tag("Cancel", { :name => 'reset', :id => 'reset_button', :type => "reset", :class => "form-reset-button col-sm-offset-1 col-sm-2"}  ) %>
<% end %>
</div>