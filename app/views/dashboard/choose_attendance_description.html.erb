				<%= form_tag({controller:"photos",action:"new"}, method: "post") do %> 
					<input type="hidden" value="<%= @employee.id %>" name="employee" >	
					<input type="hidden" value="mid_day_out" name="description" >		
					<%= submit_tag "Mid-day Out", :class => "big-button" %>
				<% end %>
			</div>
		</div>
	</div>
</div>
<% end %>
