<h2>Master Settings</h2>
<div class = "form-container left-side">
<%= form_tag({controller:"dashboard",action:"master_settings_update"}, method: "post", class:"form-horizontal") do %> 
	<div class="form-element-group">
      	<label class="form-label col-sm-8">Mid-Day Present Enabled:</label>
      	<div class="col-sm-4">
			<input type="hidden" name="store[mid_day_enabled]" value="off">
			<input type="checkbox" name="store[mid_day_enabled]"  <%= "checked" if @mid_day_enabled==true %> />
		</div>
    </div>
    <div class="form-element-group">
      	<label  class="form-label col-sm-8">Mid-Day In-Out Enabled:</label>
      	<div class="col-sm-4">
			<input type="hidden" name="store[mid_day_in_out_enabled]" value="off">
			<input type="checkbox" name="store[mid_day_in_out_enabled]"  <%= "checked" if @mid_day_in_out_enabled==true %> />
		</div>
    </div>
    <div class="form-element-group">
      	<label  class="form-label col-sm-8">Transfers Enabled:</label>
      	<div class="col-sm-4">
			<input type="hidden" name="store[transfers_enabled]" value="off">
			<input type="checkbox" name="store[transfers_enabled]"  <%= "checked" if @transfers_enabled==true %> />
		</div>
    </div>
    <div class="form-element-group">
      	<label  class="form-label col-sm-8">Leaves Enabled:</label>
      	<div class="col-sm-4">
  			<input type="hidden" name="store[leaves_enabled]" value="off">
  			<input type="checkbox" name="store[leaves_enabled]"  <%= "checked" if @leaves_enabled==true %> />
  		</div>
    </div>	
    <div class="form-element-group">
      	<label  class="form-label col-sm-8">Employee Designation Enabled:</label>
      	<div class="col-sm-4">
  			<input type="hidden" name="store[employee_designation_enabled]" value="off">
  			<input type="checkbox" name="store[employee_designation_enabled]"  <%= "checked" if @employee_designation_enabled==true %> />
  		</div>
    </div>
    <div class="form-element-group">
      	<label  class="form-label col-sm-8">Employee Code Enabled:</label>
      	<div class="col-sm-4 ">
  			<input type="hidden" name="store[employee_code_enabled]" value="off">
  			<input type="checkbox" name="store[employee_code_enabled]"  <%= "checked" if @employee_code_enabled==true %> />
  		</div>
    </div>	
    <div class="form-element-group">
        <label  class="form-label col-sm-8">Store Opening Mail Enabled:</label>
        <div class="col-sm-4 ">
        <input type="hidden" name="store[store_opening_mail_enabled]" value="off">
        <input type="checkbox" name="store[store_opening_mail_enabled]"  <%= "checked" if @store_opening_mail_enabled==true %> />
      </div>
    </div>
    <div class="form-element-group">
        <label  class="form-label col-sm-8">In Time Start(Use Chrome To Enter)</label>
        <div class="col-sm-4 ">
          <input id = "store_in_time_start" type = "time" name = "store[in_time_start]" value = "<%= @in_time_start %>" >
        </div>
    </div>
    <div class="form-element-group">
        <label  class="form-label col-sm-8">In Time End(Use Chrome To Enter)</label>
        <div class="col-sm-4 ">
          <input id = "store_in_time_end" type = "time" name = "store[in_time_end]" value = "<%= @in_time_end%>">      
        </div>
    </div>
    <div class="form-element-group">
        <label  class="form-label col-sm-8">Out Time Start(Use Chrome To Enter)</label>
        <div class="col-sm-4 ">
          <input id = "store_out_time_start" type = "time" name = "store[out_time_start]" value = "<%= @out_time_start%>">    
        </div>
    </div>
    <div class="form-element-group">
        <label  class="form-label col-sm-8">Out Time End(Use Chrome To Enter)</label>
        <div class="col-sm-4 ">
          <input id = "store_out_time_end" type = "time" name = "store[out_time_end]" value = "<%= @out_time_end%>">  
        </div>
    </div>
	<%= submit_tag "Save", :class => "form-submit-button col-sm-offset-6 col-sm-2" %>
	<%= submit_tag("Cancel", { :name => 'reset', :id => 'reset_button', :type => "reset", :class => "form-reset-button col-sm-offset-1 col-sm-2"}  ) %>
<% end %>
</div>