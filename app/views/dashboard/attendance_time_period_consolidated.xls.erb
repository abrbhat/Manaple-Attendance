<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Attendance Count(<%= @start_date.strftime("%d-%m-%Y") %> to <%= @end_date.strftime("%d-%m-%Y") %>)">
    <Table>
      <Row>
        <Cell><Data ss:Type="String">Store</Data></Cell>
        <% if @employee_code_enabled %>
          <Cell><Data ss:Type="String">Employee Code</Data></Cell>
        <% end %>
        <Cell><Data ss:Type="String">Employee</Data></Cell>
        <% if @employee_designation_enabled %>
          <Cell><Data ss:Type="String">Employee Designation</Data></Cell>
        <% end %>
        <Cell><Data ss:Type="String">Present Count (days)</Data></Cell>
        <Cell><Data ss:Type="String">Absent Count (days)</Data></Cell>
        <Cell><Data ss:Type="String">Leave Count (days)</Data></Cell>
      </Row>
    <% @attendance_data_all.each do |attendance_data| %>
      <Row>
        <Cell><Data ss:Type="String"><%= attendance_data['employee'].store.name %></Data></Cell>
        <% if @employee_code_enabled %>
          <Cell><Data ss:Type="String"><%= attendance_data['employee'].code %></Data></Cell>
        <% end %>
        <Cell><Data ss:Type="String"><%= attendance_data['employee'].name %></Data></Cell>
        <% if @employee_designation_enabled %>
          <Cell><Data ss:Type="String"><%= attendance_data['employee'].designation %></Data></Cell>
        <% end %>
        <Cell><Data ss:Type="String"><%= print_hyphen_if_empty(attendance_data['present_count']) %></Data></Cell>
        <Cell><Data ss:Type="String"><%= print_hyphen_if_empty(attendance_data['absent_count']) %></Data></Cell>
        <Cell><Data ss:Type="String"><%= print_hyphen_if_empty(attendance_data['leave_count']) %></Data></Cell>
      </Row>
    <% end %>
    </Table>
  </Worksheet>
</Workbook>