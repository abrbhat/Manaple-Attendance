<h2>Transfer Photos And Leaves</h2>
<div class = "form-container left-side">
<%= form_tag({controller:"pages",action:"transfer_attendance_data"}, method: "post",class:"form-horizontal") do %>
	<div class="form-group">
	    <label class="col-sm-2 control-label">From:</label>
	    <div class="col-sm-10">
		    <select class="form-control"  name="from_user_id">
			  	<% @users.each do |user| %>
			    	<option value="<%= user.id %>" ><%= user.name %> - <%= user.store.name if user.store.present? %></option>
			 	<% end %>
			</select>
		</div>
	</div>
	<div class="form-group">
	    <label class="col-sm-2 control-label">To:</label>
	    <div class="col-sm-10">
		    <select class="form-control"  name="to_user_id">
			  	<% @users.each do |user| %>
			    	<option value="<%= user.id %>" ><%= user.name %> - <%= user.store.name if user.store.present? %></option>
			 	<% end %>
			</select>
		</div>
	</div>    

  <%= submit_tag "Save", :class => "form-submit-button col-sm-offset-6 col-sm-2" %>
  <%= submit_tag("Cancel", { :name => 'reset', :id => 'reset_button', :type => "reset", :class => "form-reset-button col-sm-offset-1 col-sm-2"}  ) %>
<% end %>
</div>