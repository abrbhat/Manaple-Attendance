<%= javascript_include_tag "verification" %>
<% count = @photos.count() %>
<div class="photo-container">
  <% @photos.each_with_index do |photo, index| %>
    <div class="container photo-container-element center-text well"  id ="<%= photo.id %>-container">
          <div class="row">
            <div class="col-md-5 "><h3>Test</h3></div>
            <div class="col-md-2"></div>
            <div class="col-md-5 "><h3>Original</h3></div>
          </div>
          <div class="row">
            <div class="col-md-5 "><%= image_tag(photo.image.url(:original), size: "400x300")%></div>
            <div class="col-md-2">
              <h1><%= photo.user.name %></h1>
            </div>
            <div class="col-md-5 ">
                <div class="row">
                  <div class="col-md-12"><%= image_tag(photo.original.image.url(:original), size: "400x300")%></div>
                </div>
                <div class="row">
                  <% other_verified_photos = photo.other_verified_photos(3) %>
                  <div class="col-md-4"><%= image_tag(other_verified_photos[0].image.url(:original), size: "133x100")%></div>
                  <div class="col-md-4"><%= image_tag(other_verified_photos[1].image.url(:original), size: "133x100")%></div>
                  <div class="col-md-4"><%= image_tag(other_verified_photos[2].image.url(:original), size: "133x100")%></div>
                </div>             
            </div>
          </div>
      <div class="row name">
        <div class="col-md-12"><h3><%= index + 1%> of <%= count%></h3></div>
      </div>
      <div class="row">
        <div class="col-md-3"><div class='fail-button'>Fail</div></div>
        <div class="col-md-6"></div>
        <div class="col-md-3"><div class='pass-button'>Pass</div></div>
      </div>
    </div>
  <% end %>
</div>
<div class = "photo-verification-form">
  <div class="center-text"><h2>Final Check</h2></div>
  <%= form_tag({controller:"verification",action:"do_verification"}, method: "post") do %> 
    <table class="list-table">
      <thead>
        <tr>
          <th>Photo</th>           
          <th>Name</th>
          <th>Original photo</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>        
        <% @photos.each do |photo| %>
          <% if photo.user.present? %>
            <tr>      
              <td> <%= image_tag(photo.image.url(:original), size: "400x300")%></td>
              <td><h2><%= photo.user.name %></h2></td>
              <%  if photo.original.present? %>
                <% original_photo = photo.original.image.url(:original) %>
              <% end %>
              <td> <%= image_tag(original_photo, size: "400x300") %></td>
              <td> 
                <input type="hidden" name="verification_status[<%= photo.id %>]" value="verification_rejected">
           			<input type="checkbox" name="verification_status[<%= photo.id %>]" value = "verified" id="<%= photo.id %>-form" class = "final-verification-check" />
      		    </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <div class="center-text">
        <%= submit_tag "Save", :class => "form-submit-button-block verification-form-submit", :disabled => "disabled" %>
    </div>
  <% end %>
</div>
