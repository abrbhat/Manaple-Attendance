<div class="sign-in-block">
	

	<%= form_for(resource, :as => resource_name ,:url => session_path(resource_name), :html => { :role => "form", :class => "form-signin" }) do |f| %>
	  <h2 class="form-signin-heading">Welcome to Manaple</h2>
	  <%= f.email_field :email, :autofocus => true ,:type => 'text',:class => 'form-element', :placeholder => 'Email'%>

	  <%= f.password_field :password ,:class => 'form-element', :placeholder => 'Password'%>

	  <% if devise_mapping.rememberable? %>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>

	  <div ><%= f.submit "Sign in", :class=>'form-submit-button' %></div>
	  <%= render "devise/shared/links" %>
	<% end %>
</div>